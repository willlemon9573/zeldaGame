			<Command>
				<key button="LeftThumbstickUp" action ="MoveUpCommand"/>
			</Command>
			<Command>
				<key button="LeftThumbsticDown" action ="MoveDownCommand"/>
			</Command>
			<Command>
				<key button="LeftThumbstickLeft" action ="MoveLeftCommand"/>
			</Command>
			<Command>
				<key button="LeftThumbstickRight" action ="MoveRightCommand"/>
			</Command>
			<Command>
